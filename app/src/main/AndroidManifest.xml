<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.era_4.bakingmecrazy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".RecipeDetail"
            android:label="@string/title_activity_recipe_detail"
            android:parentActivityName=".MainActivity">
            <!--android:theme="@style/AppTheme.NoActionBar">-->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.era_4.bakingmecrazy.MainActivity" />
        </activity>
        <activity
            android:name=".StepDetail"
            android:label="@string/title_activity_step_detail"
            android:parentActivityName=".RecipeDetail">
            <!--android:theme="@style/AppTheme.NoActionBar"-->

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.era_4.bakingmecrazy.RecipeDetail" />
        </activity>
    </application>

</manifest>